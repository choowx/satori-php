{
    "name": "choowx/satori-php",
    "description": "Run Satori â€” enlightened library to convert HTML and CSS to SVG, using PHP",
    "keywords": [
        "choowx",
        "satori",
        "satori-php",
        "html",
        "css",
        "svg",
        "image",
        "convert"
    ],
    "homepage": "https://github.com/choowx/satori-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Choo Wen Xuan",
            "email": "choowenxuan@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/temporary-directory": "^2.1",
        "symfony/process": "^6.2"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "pestphp/pest": "^1.20"
    },
    "autoload": {
        "psr-4": {
            "Choowx\\Satori\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Choowx\\Satori\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
